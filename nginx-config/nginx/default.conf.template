# Nginx configuration
server {
    listen 80;
    # listen 443 ssl ;

    server_name ${SERVER_NAME};

    # 配置 SSL 证书
    #    website.crt 是证书
    #    pri.pem 是证书私钥
    ssl_certificate /etc/nginx/website.crt;
    ssl_certificate_key /etc/nginx/pri.pem;
    ssl_session_timeout 5m;

    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;

    # 如果配置 443 的话，通过这个设置可以把 80 转到 443 上
    # if ($scheme = http ) {
    #         return 301 https://$server_name$request_uri;
    # }

    # 设置反向代理，一般来说这儿要把 API 转出去
    location /api {
        proxy_pass http://${REVERSE_PROXY_HOST}:${REVERSE_PROXY_PORT}$request_uri;

        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # 设置静态资源，一般来说
    location / {
        # root  /home/nginx/html/out;
        root /home/nginx/html;
        index  index.html index.htm;
        try_files $uri $uri/ $uri.html /index.html;
    }

}